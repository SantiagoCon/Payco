<body id="top">

	<!-- Header -->
	<header id="header" class="skel-layers-fixed">
		<h1><a href="#">PAYCO</a></h1>
		<nav id="nav">
			<ul>
				<li><a href="home">Home</a></li>
				<li><a href="user">Client movements</a></li>
				<li><a href="admin">Administrator movements</a></li>
			</ul>
		</nav>
	</header>

	<!-- Main -->
	<section id="main" class="wrapper style1">
		<header class="major">
			<h2>Make a re charge</h2>
			<p>please follow the instruction</p>
		</header>
		<div class="container">
			<div class="row">
				<div class="8u">
					<section>
						<div class="form">

							<div class="tab-content">
								<div id="signup">
									<h1>make a re charge</h1>
									<form>
										<div class="top-row">
											<div class="field-wrap">
												<label>
													phone<span class="req">*</span>
												</label>
												<input type="text" required autocomplete="off" id="tx_phone" />
											</div>
											<br>
											<div class="field-wrap">
												<label>
													documento<span class="req">*</span>
												</label>
												<input type="text" required autocomplete="off" id="tx_doc" />
											</div>
										</div>
										<br>
										<div class="field-wrap">
											<label>
												amount<span class="req">*</span>
											</label>
											<input type="number" required autocomplete="off" id="tx_amount" />
										</div>
										<br>
										<button id="btn_save" type="button" class="button button-block" />Charge</button>

									</form>

								</div>

							</div><!-- tab-content -->

						</div> <!-- /form -->
					</section>
				</div>
			</div>
			<hr class="major" />
			<div id="error" class="text-center" style="display: none;">
				<img src="./images/ic-warning.svg" style="width: 10%">
				<h2>Sorry we have problems, please try again.</h2>
			</div>
			<div id="correct" class="text-center" style="display: none;">
				<img src="./images/ic-correct.svg" style="width: 10%">
				<h2>All good, money send.</h2>
			</div>
		</div>
	</section>

	<!-- Footer -->
	<footer id="footer">

		<ul class="copyright">
			<li>&copy; Untitled. All rights reserved.</li>
			<li>Design: <a href="http://templated.co">TEMPLATED</a></li>
			<li>Images: <a href="http://unsplash.com">Unsplash</a></li>
		</ul>
	</div>
</footer>
	<script>


		(function (APP) {
			APP.SERVICE = APP.SERVICE || {};

			APP.SERVICE.ASSETS = APP.SERVICE.ASSETS || {};
			APP.SERVICE.ASSETS.CREATE = APP.SERVICE.ASSETS.CREATE || function () {

				var postData = {
					phone: $("#tx_phone").val(),
					documento: $("#tx_doc").val(),
					amount: $("#tx_amount").val()
				};

				$.ajax({
					url: '/api/updateWallet',
					method: 'PUT',
					data: postData,
					success: function (data) {

						$('#correct').css("display", "block");
						$('#error').css("display", "none");
						window.scroll({ top: 500, left: 0, behavior: 'smooth' }); // Scroll sencillo smooth

						//location.reload(); // Recarga la pagina para ver el cambio
					},
					error: function (e, d, f) {
						$('#error').css("display", "block");
						$('#correct').css("display", "none");
						window.scroll({ top: 500, left: 0, behavior: 'smooth' }); // Scroll sencillo smooth
					}
				});

			};
			APP.EVENTS = APP.EVENTS || {
				BTN_SAVE: function () {
					$('#btn_save').on('click', function () {
						APP.SERVICE.ASSETS.CREATE();
					});
				},
				INIT: function () {
					APP.EVENTS.BTN_SAVE();
				}

			};
			APP.addEventListener('load', function () {
				APP.EVENTS.INIT();
			});
		})(window);

	</script>
</body>

</html>